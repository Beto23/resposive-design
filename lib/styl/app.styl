@import './normalize.css'
body
	font-size:16px;
	color:gray;
a
	text-decoration: none;
	color:black;

.Contenedor
	width:90%;
	max-width:900px;
	margin: 0 auto;

.Header
	&-nav
		ul
			padding:0;
			margin:0;
			li
				list-style:none;
				text-align:center;
				padding:1em 0;
	&-menu
		text-align:center;
	&-logo
		padding:1.5em 0;
		//en los bordes hay que utilizar pixeles
		border-top:5px solid black;
		border-bottom:5px solid black;
		figure
			margin: 0 auto;
			width:2em;
			height:2em;
			background:black;
